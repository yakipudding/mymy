@model Mymy.Models.HomeView
@{
    ViewBag.Title = "Home";
}

<h2>Home</h2>

@foreach (var setting in Model.Settings)
{
    <p>
        @Html.DisplayFor(modelItem => setting.Label) : @Html.DisplayFor(modelItem => setting.Memo)
    </p>
}
<hr />

@foreach (var projectTicket in Model.Projects)
{
<h4>
    @Html.ActionLink(projectTicket.ProjectName, "Edit", new { id = projectTicket.ProjectId, controller = "Projects" })
    　
    @Html.ActionLink("新規チケット登録", "Create", new { projectId = projectTicket.ProjectId, controller = "Tickets" })
</h4>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Projects.FirstOrDefault().Tickets.FirstOrDefault().TracId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Projects.FirstOrDefault().Tickets.FirstOrDefault().CsvTicket.Summary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Projects.FirstOrDefault().Tickets.FirstOrDefault().Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Projects.FirstOrDefault().Tickets.FirstOrDefault().Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Projects.FirstOrDefault().Tickets.FirstOrDefault().Memo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Projects.FirstOrDefault().Tickets.FirstOrDefault().Link2)
            </th>
            @foreach (var customField in projectTicket.ProjectCustomFields)
            {
            <th>
                @Html.DisplayFor(modelItem => customField.FieldJapaneseName)
            </th>
            }
            <th>
                @Html.DisplayNameFor(model => model.Projects.FirstOrDefault().Tickets.FirstOrDefault().CsvTicket.DueClose)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Projects.FirstOrDefault().Tickets.FirstOrDefault().CsvTicket.Reporter)
            </th>
        </tr>
        @if (projectTicket.Tickets.Any())
        {
            foreach (var item in projectTicket.Tickets)
            {
        <tr>
            <td>
                <a href="@projectTicket.TicketUrl + Html.DisplayFor(modelItem => item.TracId)">
                    @Html.DisplayFor(modelItem => item.TracId)
                </a>
            </td>
            <td>
                @Html.ActionLink(item.CsvTicket.Summary, "Edit", new { id = item.TicketId, controller = "Tickets" })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Memo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Link2)
            </td>
            @foreach (var customFieldItem in item.CsvTicket.CsvTicketCustoms)
            {
                <td>
                @Html.DisplayFor(modelItem => customFieldItem.FieldValue)
                </td>
            }
            <td>
                @Html.DisplayFor(modelItem => item.CsvTicket.DueClose)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CsvTicket.Reporter)
            </td>
        </tr>
            }
        }
    </table>
}